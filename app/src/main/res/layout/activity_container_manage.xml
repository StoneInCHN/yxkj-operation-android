<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                tools:context="com.yxkj.deliveryman.activity.ContainerManageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.yxkj.deliveryman.view.RichToolBar
            android:id="@+id/tb_container_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:left_back_visible="true"
            app:title_text="A货柜管理"/>

        <android.support.design.widget.TabLayout
            android:id="@+id/tab_container_manage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabIndicatorColor="@android:color/holo_orange_light"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/black"/>

        <View
            style="@style/line_horizontal_1px"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_container_manage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/app_bg"/>



    </LinearLayout>

</RelativeLayout>
