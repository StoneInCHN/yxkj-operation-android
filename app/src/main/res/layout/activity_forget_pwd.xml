<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:fitsSystemWindows="true"
              android:orientation="vertical"
              tools:context="com.yxkj.deliveryman.activity.ForgetPwdActivity">


    <ImageView
        android:id="@+id/iv_back_get_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:src="@mipmap/back_circle"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/set_pwd_padding_43dp"
        android:paddingRight="@dimen/set_pwd_padding_43dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="填写验证码"
            android:textColor="@color/black"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tv_tip_have_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:text="@string/tip_have_send_code"
            android:textColor="@color/gray_edittext_hint"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_phone_forget_pwd"
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_height_60dp"
                android:layout_weight="1"
                android:background="@null"
                android:text="18144398117"
                android:drawableLeft="@mipmap/phone"
                android:drawablePadding="@dimen/drawablepadding_18dp"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_14"/>

            <TextView
                android:id="@+id/tv_get_code"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:background="@drawable/selector_get_code"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_12"/>

        </LinearLayout>

        <View style="@style/line_horizontal_1dp"/>

        <EditText
            android:id="@+id/et_code_forget_pwd"
            style="@style/et_normal"
            android:background="@null"
            android:drawableLeft="@mipmap/sms"
            android:drawablePadding="@dimen/drawablepadding_18dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="6"/>

        <View style="@style/line_horizontal_1dp"/>

        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_login_bg"
            android:text="确 定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_20"/>

       <!-- <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:padding="10dp"
            android:text="密码登录"
            android:textColor="@color/orange_bg"
            android:visibility="gone"
            tools:visibility="visible"/>-->

    </LinearLayout>

</LinearLayout>
