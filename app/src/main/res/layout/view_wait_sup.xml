<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="@color/white"
                android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_goods_pic_wait_sup"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_goods_name_wait_sup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="统一康师傅冰红绿茶统一康师傅冰红绿放大森大森as"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/tv_container_name_wait_sup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="A01"
                android:textColor="@color/black"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_should_sup_num_wait_sup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/textView2"
                    android:layout_alignBottom="@+id/textView2"
                    android:layout_toEndOf="@+id/tv_not_recieve"
                    android:layout_toRightOf="@+id/tv_not_recieve"
                    android:text="应补数量:15"
                    android:textSize="@dimen/sp_12"/>

                <TextView
                    android:id="@+id/tv_not_recieve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn_get_code_bg"
                    android:text="标为未取货"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_rest"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/tv_circle_bg"
                    android:gravity="center"
                    android:text="2"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_supped_num_wait_sup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="补货数量:15"
                    android:textSize="@dimen/sp_12"/>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/line_horizontal_1px"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>