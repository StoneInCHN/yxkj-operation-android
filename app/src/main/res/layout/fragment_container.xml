<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_bg"
              android:fitsSystemWindows="true"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="vertical"
              tools:context="com.yxkj.deliveryman.fragment.ContainerFragment">

    <com.yxkj.deliveryman.view.RichToolBar
        android:id="@+id/rtb_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:right_img_src="@mipmap/add"
        app:title_text="货柜(189)"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.jdsjlzx.recyclerview.LRecyclerView
            android:id="@+id/lrv_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="12dp"/>

        <com.yxkj.deliveryman.view.NetErrorView
            android:visibility="gone"
            android:id="@+id/nev_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</LinearLayout>
