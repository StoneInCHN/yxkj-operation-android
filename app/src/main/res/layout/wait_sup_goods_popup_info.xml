<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trans_70_white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="268dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/bg_round_white"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_goods_sup_info"
                android:layout_width="243dp"
                android:layout_height="243dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/bg_stroke_dash_gray_round"
                android:padding="15dp"
                android:src="@mipmap/inform"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginRight="44dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_goods_name_sup_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="安慕希酸奶安慕希酸奶安慕希酸奶安慕希酸奶安慕希酸奶"
                    android:textColor="@color/black_text"/>

                <TextView
                    android:id="@+id/tv_goods_num_sup_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="商品条码:1234567899999"
                    android:textColor="@color/gray_edittext_hint"
                    android:textSize="@dimen/sp_10"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="28dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_should_sup_num_sup_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="总待补数:40"
                        android:textColor="@color/black_text"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="实际补货数:"
                            android:textColor="@color/black_text"/>

                        <EditText
                            android:id="@+id/et_actual_sup_num_sum_info"
                            style="@style/edit_green_underline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:inputType="number"
                            android:lines="1"
                            android:maxLength="4"
                            android:minWidth="50dp"
                            android:shadowColor="@color/green_text"
                            android:textColor="@color/green_text"
                            android:textSize="@dimen/sp_14"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_confirm_sum_info"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_round_green"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"/>

    </LinearLayout>

</ScrollView>