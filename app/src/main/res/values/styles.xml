<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="line_horizontal_1dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_1dp</item>
        <item name="android:background">@color/gray_divider</item>
    </style>

    <style name="line_horizontal_1px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_1px</item>
        <item name="android:background">@color/gray_divider</item>
    </style>

    <style name="line_horizontal_white_1px">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_1px</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="line_vertical_1px">
        <item name="android:layout_width">@dimen/divider_1px</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_divider</item>
    </style>

    <style name="et_normal" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/et_height_60dp</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="background">@null</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textColorHint">@color/gray_edittext_hint</item>
    </style>

    <style name="small_button_normal" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">170dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

</resources>
